<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ADM agendamento - Twins Petshop</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/style-index-adm.css">
    <link rel="shortcut icon" href="/img/favicon.png" type="image/x-icon">
</head>

<body>

    <div class="bg-dark shadow">
        <div class="d-inline-block">
            <a href="/usuario/admin/index"><button class="btn btn-lg btn-secondary m-2">Voltar</button></a>
        </div>
        <div class="d-inline-block">
            <h1 class="fs-2 p-3 text-white m-3">Agendamentos</h1>
        </div>
    </div>
    <div class="text-center p-3 mb-4 shadow">
        <input type="search" placeholder="Buscar um agendamento..." class="rounded w-25 p-1">
        <button class="rounded p-1">Buscar</button>
    </div>
    
    <div class=" text-center ">
        <a href="/admin/adicionarAgendamento">
            <button class="btn btn-success w-25 p-2">Adicionar Agendamento</button>
        </a>
    </div>
    <% agendamentos.forEach(agendamento=> { %>
        <div class="card mx-auto w-50 my-4">
            <div class="card-body">
                <p id="nomes">Nome do cliente: <b>
                        <%= agendamento.usuario.nome %>
                    </b> </p>
                <p>Telefone: <b>
                        <%= agendamento.usuario.telefone %>
                    </b> </p>
                <p>Tipo do pet: <b>
                        <%= agendamento.tipoPet %>
                    </b></p>
                <p>Nome do pet: <b>
                        <%= agendamento.nomePet %>
                    </b></p>
                <p>Obs: <b>
                        <%= agendamento.observacoes %>
                    </b></p>
                <p>Serviço: <b>
                        <%= agendamento.servico %>
                    </b></p>
                <p>Horário: <b>
                        <%= agendamento.horario %>h, <%= agendamento.diaSemana %>
                    </b></p>
                <div class="d-inline-block">
                    <form method="POST" action="/admin/agendamento/deletar" onsubmit="confirmarDelecao(event, this)">
                        <input type="hidden" name="id" value="<%= agendamento.id %>">
                        <button class="btn btn-danger">Cancelar agendamento</button>
                    </form>
                </div>
                <div class="d-inline">
                    <a href="/admin/agendamento/editar/<%= agendamento.id %>">
                        <button class="btn btn-primary">Editar agendamento</button>
                    </a>
                </div>
            </div>
        </div>
        <% }); %>
            <script>
                function confirmarDelecao(event, form) {
                    event.preventDefault();
                    var decisao = confirm("Você quer deletar esse agendamento?");
                    if (decisao) {
                        form.submit();
                    }
                }


            </script>
</body>

</html>