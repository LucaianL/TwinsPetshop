<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meus agendamentos Twins Petshop - Tudo para o seu pet!</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/style-menu.css">
    <link rel="stylesheet" href="/css/style-fonts.css">
    <link rel="shortcut icon" href="/img/favicon.png" type="image/x-icon">
</head>

<body>

    <%- include('../../partials/navbarSair.ejs'); %>


    <main>
        <h1 class="titulo text-center p-2 m-3">Meus Agendamentos</h1>

        <% agendamentos.forEach(agendamento=> { %>
            <div class="card w-50 mx-auto p-3">
                <div class="textos">
                    <h3>
                        <b>horário:</b> <%= agendamento.horario %>, <%= agendamento.diaSemana %>
                    </h3>
                    <h3>
                       <b>Serviço: </b> <%= agendamento.servico %>
                    </h3>
                </div>
                <form method="POST" action="/agendamento/deletar" onsubmit="confirmarDelecao(event, this)">
                        <input type="hidden" name="id" value="<%= agendamento.id %>">
                        <button class="btn btn-danger">Cancelar agendamento</button>
                </form>
            </div>
            <br>

        <% }); %>
    </main>

    <%- include('../../partials/footerSair.ejs'); %>

    <script>
        function confirmarDelecao(event, form){
            event.preventDefault();
            var decisao = confirm("Você quer deletar esse agendamento?");
            if(decisao){
                form.submit();
            }
        }
    </script>
</body>

</html>